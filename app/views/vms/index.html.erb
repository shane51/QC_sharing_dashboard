<h1>Listing VMs</h1>

<table>
<% @vms.each do |vm| %>
 <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
	<td class="list_ip">
		<a href="http://<%= vm.ip %>/ibmcognos" target="_blank"><%= vm.ip %></a>
	</td>
	<td class="list_description">
		<dl>
			<dt>User: <%= vm.user %></dt>
			<dd><%= truncate(strip_tags(vm.description), length: 80) %></dd>
		</dl>
	</td>
	<td class="list_description">
		<dl>
			<dt>Ocuppy Period:</dt>
			<dd><%= vm.period %></dd>
		</dl>
	</td>
	<td class="list_description">
		<dl>
			<dt>Build:</dt>
			<dd><%= vm.build %></dd>
		</dl>
	</td>
	<td class="list_actions">
		<%= link_to 'Show', vm %><br/>
		<%= link_to 'Edit', edit_vm_path(vm) %><br/>
		<%= link_to 'Destory', vm, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
		
	</td>
 </tr>

<% end %>
</table>

<br>

